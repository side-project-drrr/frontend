{
    "name": "@monorepo/drrr-front",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "service",
        "admin",
        "component"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "postinstall": "husky install",
        "component": "yarn workspace @monorepo/component storybook",
        "service": "yarn workspace @monorepo/service dev",
        "admin": "yarn workspace @monorepo/admin dev",
        "lint:fix": "eslint --fix './src/**/*.{ts,tsx}'",
        "prettier:fix": "prettier --write './src/**/*.{ts,tsx}'",
        "test": "vitest --run --reporter verbose --globals",
        "test:ui": "vitest --ui",
        "test:watch": "vitest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@monorepo/admin": "workspace:^",
        "@monorepo/component": "workspace:^",
        "@monorepo/service": "workspace:^",
        "@types/react-datepicker": "^4.15.0",
        "framer-motion": "^10.16.0",
        "global": "^4.4.0",
        "react": "^18.2.0",
        "react-datepicker": "^4.18.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.11.0",
        "react-router-dom": "^6.15.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.3",
        "@testing-library/react": "^14.0.0",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "@vitejs/plugin-react": "^4.0.4",
        "@vitest/ui": "^0.34.4",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "eslint-plugin-storybook": "^0.6.13",
        "eslint-plugin-vitest-globals": "^1.4.0",
        "husky": "^8.0.3",
        "identity-obj-proxy": "^3.0.0",
        "jsdom": "^22.1.0",
        "lint-staged": "^14.0.0",
        "prettier": "3.0.2",
        "typescript": "^5.0.2",
        "vite": "^4.4.5",
        "vite-tsconfig-paths": "^4.2.0",
        "vitest": "^0.34.4"
    },
    "packageManager": "yarn@3.6.3"
}
